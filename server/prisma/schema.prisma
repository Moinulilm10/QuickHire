// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER") // USER, ADMIN, ORGANIZATION
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id          String   @id @default(cuid())
  title       String
  company     String
  location    String
  type        String   // Full-Time, Part-Time, etc.
  description String?
  logoColor   String?
  logoUrl     String?
  salary      String?
  categories  String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
